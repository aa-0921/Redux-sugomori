{
  "compilerOptions": {
    // "typeRoots" : ["./src/types"],
    "strict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "es2017"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react"
  },
  // "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
  "exclude": ["node_modules"],
  
  "compileOnSave": false,
  "types": ["node"],
  // "include": ["src/**/*"],
  "include": ["**/*"],

  "allowJs": true
}
